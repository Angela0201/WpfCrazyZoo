<Window x:Class="WpfCrazyZoo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfCrazyZoo"
        mc:Ignorable="d"
        xmlns:res="clr-namespace:WpfCrazyZoo.Resources"
        Title="{x:Static res:Strings.AppTitle}" Height="600" Width="900"
        MinHeight="520" MinWidth="860"
        SizeToContent="WidthAndHeight">
    <Window.Resources>
        <Style x:Key="ReadOnlyAsText" TargetType="TextBox">
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="CaretBrush" Value="Transparent"/>
            <Setter Property="Cursor" Value="Arrow"/>
            <Setter Property="IsTabStop" Value="False"/>
        </Style>
    </Window.Resources>
    
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,0,0,8">
                <TextBlock Text="{x:Static res:Strings.Ui_FilterByKind}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <ComboBox x:Name="FilterKindCombo" Width="180" SelectionChanged="FilterKindCombo_SelectionChanged">
                    <ComboBoxItem Tag="-1" Content="{x:Static res:Strings.Ui_All}" IsSelected="True"/>
                    <ComboBoxItem Tag="0" Content="{x:Static res:Strings.Ui_Cat}"/>
                    <ComboBoxItem Tag="1" Content="{x:Static res:Strings.Ui_Dog}"/>
                    <ComboBoxItem Tag="2" Content="{x:Static res:Strings.Ui_Bird}"/>
                </ComboBox>
            </StackPanel>

            <GroupBox Header="{x:Static res:Strings.Ui_Animals}" Grid.Row="1" Grid.Column="0" Margin="0,0,8,8">
                <Grid>
                    <ListBox x:Name="AnimalsList"
                             DisplayMemberPath="Name"
                             ItemsSource="{Binding ViewAnimals}"
                             SelectedItem="{Binding SelectedAnimal, Mode=TwoWay}"
                             SelectionChanged="AnimalsList_SelectionChanged"/>
                </Grid>
            </GroupBox>

            <GroupBox Header="{x:Static res:Strings.Ui_Details}" Grid.Row="1" Grid.Column="1" Margin="0,0,0,8">
                <StackPanel Margin="8">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                        <TextBlock Width="80" VerticalAlignment="Center" Text="{x:Static res:Strings.Ui_Name}"/>
                        <TextBox x:Name="NameBox" Width="220" Style="{StaticResource ReadOnlyAsText}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                        <TextBlock Width="80" VerticalAlignment="Center" Text="{x:Static res:Strings.Ui_Age}"/>
                        <TextBox x:Name="AgeBox" Width="220" Style="{StaticResource ReadOnlyAsText}" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                        <TextBlock Width="80" VerticalAlignment="Center" Text="{x:Static res:Strings.Ui_Kind}"/>
                        <ComboBox x:Name="KindCombo" Width="220" IsEnabled="False">
                            <ComboBoxItem Tag="0" Content="Cat"/>
                            <ComboBoxItem Tag="1" Content="Dog"/>
                            <ComboBoxItem Tag="2" Content="Bird"/>
                        </ComboBox>
                    </StackPanel>

                    <WrapPanel Margin="0,0,0,10" ItemWidth="120">
                        <Button x:Name="AddBtn" Width="110" Content="{x:Static res:Strings.Ui_AddAnimal}" Click="AddBtn_Click" Margin="0,0,6,0"/>
                        <Button x:Name="RemoveBtn" Width="110" Content="{x:Static res:Strings.Ui_RemoveAnimal}" Click="RemoveBtn_Click" Margin="0,0,6,0"/>
                        <Button x:Name="SoundBtn" Width="110" Content="{x:Static res:Strings.Ui_MakeSound}" Click="SoundBtn_Click" Margin="0,0,6,0"/>
                    </WrapPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                        <TextBlock Width="80" VerticalAlignment="Center" Text="{x:Static res:Strings.Ui_Food}"/>
                        <TextBox x:Name="FoodBox" Width="220"/>
                        <Button Width="120" Content="{x:Static res:Strings.Ui_Feed}" Click="FeedBtn_Click" Margin="8,0,0,0"/>
                    </StackPanel>

                    <WrapPanel Margin="0,6,0,0" ItemWidth="120">
                        <Button x:Name="DropFoodBtn" Width="110" Content="{x:Static res:Strings.Ui_DropFood}" Click="DropFoodBtn_Click" Margin="0,0,6,0"/>
                        <Button x:Name="NightBtn" Width="110" Content="{x:Static res:Strings.Ui_StartNight}" Click="NightBtn_Click" Margin="0,0,6,0"/>
                        <Button x:Name="CrazyBtn" Width="110" Content="{x:Static res:Strings.Ui_CrazyAction}" Click="CrazyBtn_Click" Margin="0,0,6,0"/>
                    </WrapPanel>
                </StackPanel>
            </GroupBox>
            <GroupBox Header="{x:Static res:Strings.Ui_Log}" Grid.Row="2" Grid.Column="0" Margin="0,0,8,0">
                <StackPanel Margin="6">
                    <ListBox x:Name="LogList" Height="200" Margin="0,0,0,8" ItemsSource="{Binding LogLines}"/>
                    <Button x:Name="ClearLogBtn" Content="{x:Static res:Strings.Ui_ClearLog}" Width="120" Click="ClearLogBtn_Click"/>
                    <Button x:Name="SaveLogsBtn" Content="{x:Static res:Strings.Ui_SaveLogs}" Width="100" Margin="5" Click="SaveLogsBtn_Click"/>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="{x:Static res:Strings.Ui_Stats}" Grid.Row="2" Grid.Column="1">
                <StackPanel Margin="6">
                    <ListBox x:Name="StatsList" Height="120" Margin="0,0,0,8" ItemsSource="{Binding StatsLines}"/>
                </StackPanel>
            </GroupBox>
        </Grid>
    </ScrollViewer>
</Window>