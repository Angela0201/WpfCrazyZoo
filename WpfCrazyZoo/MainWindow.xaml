<Window x:Class="WpfCrazyZoo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfCrazyZoo"
        mc:Ignorable="d"
        xmlns:res="clr-namespace:WpfCrazyZoo.Resources"
        Title="Crazy Zoo" Height="600" Width="900"
        MinHeight="520" MinWidth="860"
        SizeToContent="WidthAndHeight">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,0,0,8">
                <TextBlock Text="Filter by kind:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <ComboBox x:Name="FilterKindCombo" Width="180" SelectionChanged="FilterKindCombo_SelectionChanged">
                    <ComboBoxItem Tag="-1" Content="All" IsSelected="True"/>
                    <ComboBoxItem Tag="0" Content="Cat"/>
                    <ComboBoxItem Tag="1" Content="Dog"/>
                    <ComboBoxItem Tag="2" Content="Bird"/>
                </ComboBox>
            </StackPanel>

            <GroupBox Header="Animals" Grid.Row="1" Grid.Column="0" Margin="0,0,8,8">
                <Grid>
                    <ListBox x:Name="AnimalsList" DisplayMemberPath="Name" SelectionChanged="AnimalsList_SelectionChanged"/>
                </Grid>
            </GroupBox>

            <GroupBox Header="Details" Grid.Row="1" Grid.Column="1" Margin="0,0,0,8">
                <StackPanel Margin="8">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                        <TextBlock Width="80" VerticalAlignment="Center" Text="Name"/>
                        <TextBox x:Name="NameBox" Width="220"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                        <TextBlock Width="80" VerticalAlignment="Center" Text="Age"/>
                        <TextBox x:Name="AgeBox" Width="220"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                        <TextBlock Width="80" VerticalAlignment="Center" Text="Kind"/>
                        <ComboBox x:Name="KindCombo" Width="220">
                            <ComboBoxItem Tag="0" Content="Cat"/>
                            <ComboBoxItem Tag="1" Content="Dog"/>
                            <ComboBoxItem Tag="2" Content="Bird"/>
                        </ComboBox>
                    </StackPanel>

                    <WrapPanel Margin="0,0,0,10">
                        <Button x:Name="AddBtn" Content="Add animal" Click="AddBtn_Click" Margin="0,0,6,0"/>
                        <Button x:Name="RemoveBtn" Content="Remove animal" Click="RemoveBtn_Click" Margin="0,0,6,0"/>
                        <Button x:Name="SoundBtn" Content="Make sound" Click="SoundBtn_Click" Margin="0,0,6,0"/>
                    </WrapPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                        <TextBlock Width="80" VerticalAlignment="Center" Text="Food"/>
                        <TextBox x:Name="FoodBox" Width="220"/>
                        <Button Content="Feed" Click="FeedBtn_Click" Margin="8,0,0,0"/>
                    </StackPanel>

                    <Button x:Name="CrazyBtn" Content="Crazy action" Click="CrazyBtn_Click" Width="160" HorizontalAlignment="Left"/>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Log" Grid.Row="2" Grid.ColumnSpan="2">
                <StackPanel Margin="6">
                    <ListBox x:Name="LogList" Height="120" Margin="0,0,0,8"/>
                    <Button x:Name="ClearLogBtn" Content="Clear log" Width="120" Click="ClearLogBtn_Click"/>
                </StackPanel>
            </GroupBox>
        </Grid>
    </ScrollViewer>
</Window>